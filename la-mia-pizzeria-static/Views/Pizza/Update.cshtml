@model PizzaFormModel

@{
	var pizza = Model;
}

<h2>Modifica la tua pizza</h2>

<div class="container">
	<div class="pad">
		<form method="post" asp-controller="Pizza" asp-action="Update" asp-route-id="@Model.Pizza.Id" enctype="multipart/form-data">
			@Html.AntiForgeryToken()
			<div class="form-field">
				<label asp-for="Pizza.Name" class="form-label">Nome</label>
				<input asp-for="Pizza.Name" class="form-control" />
				<span asp-validation-for="Pizza.Name" class="text error"></span>
			</div>
			<div class="form-field">
				<label asp-for="Pizza.Description" class="form-label">Descrizione</label>
				<textarea asp-for="Pizza.Description" class="form-control"></textarea>
				<span asp-validation-for="Pizza.Description" class="text error"></span>
			</div>
			<div class="form-field">
				<label asp-for="IngredientiSelezionati" class="form-label">Ingredienti</label>
				<select asp-for="IngredientiSelezionati" multiple="multiple" class="form-control" asp-items="@Model.Ingredienti"></select>
			</div>
			<div class="form-field">
				<label asp-for="Pizza.Foto" class="form-label">Percorso Foto</label>
				<input asp-for="Pizza.Foto" class="form-control" />
				<span asp-validation-for="Pizza.Foto" class="text error"></span>
			</div>
			<div class="form-field">
				<label asp-for="Pizza.Prezzo" class="form-label">Prezzo</label>
				<input type="text" asp-for="Pizza.Prezzo" class="form-control">
				<span asp-validation-for="Pizza.Prezzo" class="text error"></span>
			</div>
			<div class="form-field">
				<label asp-for="Pizza.CategoryId" class="form-label">Category</label>
				<select asp-for="Pizza.CategoryId" class="form-control">
					<option value="0"></option>
					@foreach (var cat in Model.Categories)
					{
						<option value="@cat.Id">@cat.Name</option>
					}
				</select>
				<span asp-validation-for="Pizza.CategoryId" class="text error"></span>
			</div>
			<button class="btn btn-success my-2" type="submit">Save</button>
		</form>
	</div>
</div>
